# Telegram Bot Token from @BotFather
BOT_TOKEN=your_bot_token_here

# Groq API key (required)
# Get free key at https://console.groq.com
GROQ_API_KEY=gsk_xxxxxxxxxxxxx

# Allowed chat IDs (comma-separated, required for security)
# Get chat ID by adding @getmyid_bot to your group
# Example: -1001234567890,-1009876543210
ALLOWED_CHATS=

# Language for transcription (default: ru)
WHISPER_LANGUAGE=ru

# LLM postprocessing: adds punctuation and fixes spelling via Groq LLM
# Uses llama-3.3-70b (free), adds ~200-400ms latency
ENABLE_POSTPROCESS=true
